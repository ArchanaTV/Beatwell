<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BeatWell Debug Console"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Status Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Status"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_network_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Network: Checking..."
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_api_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="API URL: Loading..."
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_logged_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logged In: Checking..."
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_current_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User: None"
            android:layout_marginBottom="16dp" />

        <!-- Test Buttons -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debug Tests"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_test_connectivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test API Connectivity"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_test_api_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test API Login (phoneuser3)"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_test_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Registration (debuguser)"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_clear_local_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Local Data"
            android:backgroundTint="#FF5722"
            android:layout_marginBottom="16dp" />

        <!-- Results Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Results"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No tests run yet"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:textIsSelectable="true"
            android:fontFamily="monospace" />

    </LinearLayout>
</ScrollView>