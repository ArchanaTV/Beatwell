<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date Header -->
        <TextView
            android:id="@+id/tvDateHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Today, Sep 30"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Meal Types Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Breakfast -->
            <LinearLayout
                android:id="@+id/llBreakfast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivBreakfast"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_breakfast"
                    android:contentDescription="@string/breakfast"
                    app:tint="@color/meal_breakfast"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvBreakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Breakfast"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    tools:visibility="visible" />

            </LinearLayout>

            <!-- Lunch -->
            <LinearLayout
                android:id="@+id/llLunch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp">

                <ImageView
                    android:id="@+id/ivLunch"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_lunch"
                    android:contentDescription="@string/lunch"
                    app:tint="@color/meal_lunch"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvLunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Lunch"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Dinner -->
            <LinearLayout
                android:id="@+id/llDinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp">

                <ImageView
                    android:id="@+id/ivDinner"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_dinner"
                    android:contentDescription="@string/dinner"
                    app:tint="@color/meal_dinner"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvDinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Dinner"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

