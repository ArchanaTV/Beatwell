<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Status Bar Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0" />

    <!-- Header with Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back_button_description"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:layout_marginEnd="16dp" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Talk to Dietitian"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Chat Messages Container -->
    <ScrollView
        android:id="@+id/svChatMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/background_light"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/llChatContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- AI Message 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="start">

                <!-- AI Avatar -->
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_ai_avatar"
                    android:background="@drawable/circle_background_ai"
                    android:padding="6dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="AI Avatar" />

                <!-- AI Message Bubble -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/chat_bubble_ai"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi! How can I help you?"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- User Message -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="end">

                <!-- User Message Bubble -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/chat_bubble_user"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How about cauliflower-crust pizza?"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Mods: Low-fat feta (instead of mozzarella), roasted veggies"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp"
                        android:alpha="0.9" />

                </LinearLayout>

                <!-- User Avatar -->
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_person"
                    android:background="@drawable/circle_background_user"
                    android:padding="6dp"
                    android:layout_marginStart="12dp"
                    android:contentDescription="User Avatar" />

            </LinearLayout>

            <!-- AI Response with Nutrition Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="start">

                <!-- AI Avatar -->
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_ai_avatar"
                    android:background="@drawable/circle_background_ai"
                    android:padding="6dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="AI Avatar" />

                <!-- AI Message Bubble with Nutrition Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/chat_bubble_ai"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Great choice! Here's the nutrition breakdown:"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Nutrition: 280 kcal, 8g fat (2g saturated), 6g fiber"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Input Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <!-- Text Input -->
        <EditText
            android:id="@+id/etMessageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:hint="Type your message..."
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:maxLines="3"
            android:inputType="textMultiLine"
            android:layout_marginEnd="12dp" />

        <!-- Send Button -->
        <ImageView
            android:id="@+id/ivSendButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_send"
            android:background="@drawable/send_button_background"
            android:padding="8dp"
            android:contentDescription="Send Message"
            android:backgroundTint="@color/primary_color" />

    </LinearLayout>

    <!-- Bottom Navigation -->
    <include layout="@layout/layout_bottom_navigation" />

</LinearLayout>
